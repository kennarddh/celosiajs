{
	"tabWidth": 4,
	"singleQuote": true,
	"useTabs": true,
	"jsxSingleQuote": true,
	"semi": false,
	"arrowParens": "avoid",
	"endOfLine": "lf",
	"printWidth": 100,

	"importOrder": [
		"^express$",
		"^http$",
		"^path$",
		"^bcrypt$",
		"^winston",
		"^compression$",
		"^cookie-parser$",
		"^helmet$",
		"<THIRD_PARTY_MODULES>",
		"^[./]"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,

	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
